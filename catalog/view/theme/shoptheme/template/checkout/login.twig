{{ header }}

		<header class="img-cover standard img" style="background-image: url('catalog/view/theme/shoptheme/img/header2.webp');">
			<div class="filter">
				<div class="container">
					<div class="row">
						<div class="col-md-12">
							<h1>{{ title }}</h1>
						</div>
					</div>
			</div>
		</header>

		<section class="section-register section-7">
			<div class="container">
				<div class="row">


							<div class="col-md-6">
								<div class="register-box">
									<p class="title">{{ text_new_customer }}</p>
									<p class="text">{{ text_register_account }}</p>
								<a href=""><div class="button">{{ text_register }}</div></a>
								</div>
							</div>
							<div class="col-md-6">
								<div class="login-box">
									<p class="title">{{ heading_title }}</p>
									<form>
										<input placeholder="Email" type="text">
										<input placeholder="Passwort" type="password">
										<a href="{{ forgotten }}" class="passwort">{{ text_forgotten}}</a>
										<input value="anmelden" type="submit">
									</form>
								</div>
							</div>



					
				</div>
			</div>
		</section>

		<section class="nav-section last">
			<div class="container">
				<div class="row">
					<div class="col-md-6">
						<a href=""><div class="button small back">Back</div></a>
					</div>
					<div class="col-md-6">
						<a href=""><div class="button small next">Continue to registration</div></a>
					</div>
				</div>
			</div>
		</section>



	
{{ footer }} 
