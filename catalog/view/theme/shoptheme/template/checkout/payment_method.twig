{{ header }}

		<header class="img-cover standard img" style="background-image: url('catalog/view/theme/shoptheme/img/bezahlung.webp');">
			<div class="filter">
				<div class="container">
					<div class="row">
						<div class="col-md-12">
							<h1>{{ payment }}</h1>
						</div>
					</div>
			</div>
		</header>

		<section class="section-form section-8 last">
			<form>
			<div class="container">
				<div class="row">
					<div class="col-md-12">
						<div class="row">
								<div class="col-md-12">
									<h2>{{ text_checkout_payment_address }}</h2>
								</div>
								<div class="col-md-4">
									<input class="register" type="text" placeholder="Firma">
								</div>
								<div class="col-md-4">
									<input class="register" type="text" placeholder="Straße">
								</div>
								<div class="col-md-4">
									<input class="register" type="text" placeholder="Zusatz">
								</div>
								<div class="col-md-4">
									<input class="register" type="text" placeholder="Ort">
								</div>
								<div class="col-md-2">
									<input class="register" type="text" placeholder="PLZ">
								</div>
								<div class="col-md-3">
									<input class="register" type="text" placeholder="Land">
								</div>
								<div class="col-md-3">
									<input class="register" type="text" placeholder="Bundesland">
								</div>
								<div class="col-md-12">
									<input type="checkbox" name="checkbox" id="lieferadresse">
										<label for="lieferadresse" class="item item-2">
											<p class="title-1">Die Rechnungsadresse entspricht der Lieferadresse.</p>
											<div class="circle"></div>
										</label>
								</div>
								
                <div class="col-md-12">
									<h2>Lieferadresse</h2>
								</div>
								<div class="col-md-4">
									<input class="register" type="text" placeholder="Firma">
								</div>
								<div class="col-md-4">
									<input class="register" type="text" placeholder="Straße">
								</div>
								<div class="col-md-4">
									<input class="register" type="text" placeholder="Zusatz">
								</div>
								<div class="col-md-4">
									<input class="register" type="text" placeholder="Ort">
								</div>
								<div class="col-md-2">
									<input class="register" type="text" placeholder="PLZ">
								</div>
								<div class="col-md-3">
									<input class="register" type="text" placeholder="Land">
								</div>
								<div class="col-md-3">
									<input class="register" type="text" placeholder="Bundesland">
								</div>

								<div class="col-md-12">
									<h2>Gutscheincode</h2>
								</div>
								<div class="col-md-4">
									<input class="register" type="text" placeholder="Gutscheincode eingeben">
								</div>
								<div class="col-md-4">
									<a href=""><div class="button small">Einlösen</div></a>
								</div>
                
								<div class="col-md-12">
									<h2>{{ payment_method }}</h2>
								</div>
								<div class="col-md-4">
									<div class="zahlung-item">
                  {% for payment_method in payment_methods %}

                    {% if payment_method.code == code or not code %}
                      {% set code = payment_method.code %}
                      <input type="radio" name="payment_method" id="{{ payment_method.code }}" value="{{ payment_method.code }}" checked="checked">
                    {% else %}
                      <input type="radio" name="payment_method" id="{{ payment_method.code }}" value="{{ payment_method.code }}" />
                    {% endif %}
                        <label for="{{ payment_method.code }}" class="item">
                          <p class="title-1">{{ payment_method.title }}</p>
                          <div class="circle"></div>
                        </label>

                  {% endfor %}

									</div>
								</div>
								<div class="col-md-12">
										<input class="button small" value="{{ button_continue }}" id="button-payment-method" type="submit">
								</div>
						</div>
					</div>
				</div>
			</div>
			</form>
		</section>


{{ footer }}
