{{ header }}
		<header class="img-cover standard img" style="background-image: url('catalog/view/theme/shoptheme/img/header2.webp');">
			<div class="filter">
				<div class="container">
					<div class="row">
						<div class="col-md-12">
							<h1>{{ registration }}</h1>
						</div>
					</div>
			</div>
		</header>

		<section class="section-register section-7">
			<div class="container">
				<div class="row">
					<div class="col-md-4">
						<h2> Title 1 </h2>
						<p class="subline">{{ test_info }}</p>
						<div class="box">
							<div class="item">
								<p class="title">{{ exam }}</p>
                <p class="text">{{ heading_title }} - {{ model }}</p>
							</div>
							<div class="item">
                {% if assessment.option %}
                <p class="subtitle">{{ text_option }}</p>
                  {% for option in assessment.option %}
                    <p class="product">{{ option.name }}</p>
                    <a class="edit edit-1" href="">ändern</a>
                  {% endfor %}
                {% endif %}
                <p class="subtitle">{{ text_date }}</p>
								<p class="date">{{ date }}</p>
								<a class="edit edit-2" href="">ändern</a>
                <p class="subtitle">{{ text_model }}</p>
								<p class="title">{{ model }}</p>
								{# <p class="text">{{ description }}</p> #}
							</div>
							<div class="item">
								<p class="subtitle">{{ text_location }}</p>
								<p class="title title-2">{{ location }}</p>
								<div class="mapouter">
										<div class="gmap_canvas"><iframe width="100%" height="150" id="gmap_canvas" src="https://maps.google.com/maps?q=Berlin%20Greifswalderstra%C3%9Fe%2021&t=&z=15&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe><a href="https://www.embedgooglemap.net"></a>
									</div>
								</div>
							</div>
							<div class="item last">
								<p class="subtitle">{{ text_payment }}</p>
								<div class="item-box">
									<p class="product">{{ exam }}</p>
									{# <p class="number">1</p> #}
									<p class="price">{{ price }}</p>
								</div>
                {% if assessment.option %}
                {% for option in assessment.option %}
                  <div class="item-box">
                    <p class="product">{{ option.name }}</p>
                    {# <p class="number">1</p> #}
                    <p class="price">{{ option.price }}</p>
                  </div>
                {% endfor %}
                {% endif %}

								<div class="item-box last">
									<p class="total">{{ total }}</p>
									<p class="total-price">{{ price }}</p>
								</div>
							</div>
						</div>
					</div>
					<div class="col-md-8">
						<h2> Title 2 </h2>
            <div class="item">
						  <p class="subline">{{ test_info }} </p>
            </div>
						<div class="scoring-box-1">
							<p class="title">{{ text_description }}</p>
							<p class="subline">{{ description }}</p>
							<div class="row">
            {% if options %}
						<div class="scoring-box-1">
							<p class="title">{{ text_option }}</p>
							<div class="row">
              {% for option in options %}
                
								<div class="col-md-4">
									<input type="radio" onclick="location = this.value;" name="option[{{ option.assessment_option_id }}]" value="{{ option_value.assessment_option_value_id }}">
										<label for="option{{ option.name }}" class="item">
											<p class="title-1">{{ option.name }}</p>
                        <p{{ option_value.name }}</p>
                        {% for option_value in option.assessment_option_value %}
                        {% if option_value.price and option_value.price != 0 %}
                          <div class="bottom-box">{{ option_value.price_prefix }}{{ option_value.price }}</div>
                        {% else %}
                          <div class="bottom-box">{{ text_no_price}}</div>
                        {% endif %}
                        {% endfor %}
										</label>
								</div>
              
              {% endfor %}

							</div>
						</div>
						<div class="scoring-box-2">
							<p class="title">{{ text_information }}</p>
							<p class="subline">{{ information }}</p>

							<p class="gutschein">Last sentence!</p>
						</div>
            {% endif %}
					</div>
				</div>
			</div>
		</section>
		<section class="nav-section last">
			<div class="container">
				<div class="row">
					<div class="col-md-6">
						<a href=""><div class="button small back">Back</div></a>
					</div>
					<div class="col-md-6">
						<a href=""><div class="button small next">Continue to registration</div></a>
					</div>
				</div>
			</div>
		</section>


{{ footer }} 
