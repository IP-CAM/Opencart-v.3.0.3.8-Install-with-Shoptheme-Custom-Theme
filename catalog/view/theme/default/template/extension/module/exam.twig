<div class="list-group">
  {% for exam in exams %}
  {% if exam.exam_id == exam_id %} 
  <a href="{{ exam.href }}" class="list-group-item active">{{ exam.name }}</a> 
  {% if exam.children %}
  {% for child in exam.children %}
  {% if child.exam_id == child_id %}
  <a href="{{ child.href }}" class="list-group-item active">&nbsp;&nbsp;&nbsp;- {{ child.name }}</a> 
  {% else %} 
  <a href="{{ child.href }}" class="list-group-item">&nbsp;&nbsp;&nbsp;- {{ child.name }}</a>
  {% endif %}
  {% endfor %}
  {% endif %}
  {% else %} <a href="{{ exam.href }}" class="list-group-item">{{ exam.name }}</a>
  {% endif %}
  {% endfor %}
</div>
